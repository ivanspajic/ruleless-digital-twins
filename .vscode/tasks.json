"version": "2.0.0",
"tasks": [
    {
        "label": "(Re)Build all OMC FMUs",
        "type": "shell",
        // We're leaving the Incubator FMU in place for now.
        "command": "cd SmartNode/Implementations/FMUs/Source && make clean all && cp roomM370.fmu au_incubator.fmu ..",
        "problemMatcher": [],
        "group": "build"
    },
    {
        "label": "Build all Python FMUs",
        "type": "shell",
        "command": "(cd SmartNode/Implementations/FMUs/Nordpool-FMU && make clean all && cp NordPool.fmu .. ) ; (cd SmartNode/Implementations/FMUs/Yr-Weather-FMU && make clean all && cp YrWeather.fmu .. )",
        "problemMatcher": [],
        "group": "build"
    },
    {
        "type": "dotnet",
        "task": "build",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": [],
        "label": "dotnet: build"
    }
]
}